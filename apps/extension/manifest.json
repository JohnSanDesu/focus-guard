

{
  "manifest_version": 3,
  "name": "FocusGuard",
  "version": "0.1.0",
  "description": "Stay aligned with your focus goals. Judge pages as ALLOW/BLOCK/REVIEW.",
  "action": {
    "default_title": "FocusGuard",
    "default_popup": "src/ui/start.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "alarms"                  
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.ts",   
    "type": "module"                         
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"],
      "run_at": "document_idle"
    }
  ]
}
